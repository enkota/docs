{
  "openapi": "3.1.0",
  "info": {
    "title": "Maya API",
    "description": "OpenAPI specification for the Maya API (v1). Most endpoints require personal access tokens via HTTP Bearer.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://tunnel.supmaya.com/api",
      "description": "API base"
    }
  ],
  "security": [
    { "bearerAuth": [] }
  ],
  "paths": {
    "/v1/bots": {
      "get": {
        "tags": ["Bots"],
        "summary": "List bots",
        "description": "Returns a paginated list of bots for the authenticated company.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Results page",
            "schema": { "type": "integer", "format": "int32", "minimum": 1 }
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated bots response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PaginatedBots" }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "403": { "$ref": "#/components/responses/Forbidden" }
        }
      }
    },
    "/v1/bots/{bot}": {
      "get": {
        "tags": ["Bots"],
        "summary": "Get a bot",
        "description": "Returns a single bot by ID.",
        "parameters": [
          {
            "name": "bot",
            "in": "path",
            "required": true,
            "description": "Bot ID",
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "responses": {
          "200": {
            "description": "Bot",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Bot" }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "403": { "$ref": "#/components/responses/Forbidden" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/v1/bots/{bot}/leads": {
      "put": {
        "tags": ["Leads"],
        "summary": "Update a lead for a bot",
        "description": "Updates an existing lead identified by `id` or `phone` for the current company and bot.",
        "parameters": [
          {
            "name": "bot",
            "in": "path",
            "required": true,
            "description": "Bot ID",
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdateLead" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Lead updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "message": { "type": "string" },
                    "data": { "$ref": "#/components/schemas/Lead" }
                  }
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "403": { "$ref": "#/components/responses/Forbidden" },
          "404": { "$ref": "#/components/responses/NotFound" },
          "422": { "$ref": "#/components/responses/ValidationError" }
        }
      }
    },
    "/v1/bots/{bot}/messages": {
      "post": {
        "tags": ["Messages"],
        "summary": "Create/update inbound lead and dispatch bot",
        "description": "Creates or updates a lead based on phone and dispatches the bot to engage via the configured channel.",
        "parameters": [
          {
            "name": "bot",
            "in": "path",
            "required": true,
            "description": "Bot ID",
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/InboundMessage" },
              "examples": {
                "basic": {
                  "value": {
                    "name": "Jane Smith",
                    "email": "jane@example.com",
                    "company": "Example Corp",
                    "phone": "+14155552671",
                    "external_id": "crm-12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message accepted; bot dispatched",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MessageAccepted" }
              }
            }
          },
          "207": {
            "description": "Lead updated but already in active conversation",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PartialSuccess" }
              }
            }
          },
          "402": {
            "description": "Lead limit reached for current billing period",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LimitReached" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/ValidationError" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "403": { "$ref": "#/components/responses/Forbidden" }
        }
      }
    },
    "/v1/calendar/mock-availability": {
      "post": {
        "tags": ["Calendar"],
        "summary": "Mock availability",
        "description": "Returns mock calendar availability slots for testing calendar integrations.",
        "security": [],
        "parameters": [
          {
            "name": "start_time",
            "in": "query",
            "description": "ISO8601 start date-time (defaults to tomorrow)",
            "schema": { "type": "string", "format": "date-time" }
          },
          {
            "name": "end_time",
            "in": "query",
            "description": "ISO8601 end date-time (defaults to start + 7 days)",
            "schema": { "type": "string", "format": "date-time" }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of slots to return (default 24)",
            "schema": { "type": "integer", "format": "int32", "minimum": 1 }
          }
        ],
        "responses": {
          "200": {
            "description": "Array of mock availability slots",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/AvailabilitySlot" }
                }
              }
            }
          }
        }
      }
    },
  },
  "components": {
    "schemas": {
      "Bot": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "company_id": { "type": "integer", "format": "int64" },
          "name": { "type": "string" },
          "status": { "type": "boolean" },
          "timezone": { "type": ["string", "null"] },
          "prompt": { "type": ["string", "null"] },
          "calendar_channel": { "type": ["string", "null"], "enum": ["calendly", "api", null] },
          "qualification_channel": { "type": ["string", "null"] },
          "calendar_api_availability_url": { "type": ["string", "null"], "format": "uri" },
          "created_at": { "type": ["string", "null"], "format": "date-time" },
          "updated_at": { "type": ["string", "null"], "format": "date-time" }
        }
      },
      "Lead": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "bot_id": { "type": ["integer", "null"], "format": "int64" },
          "name": { "type": ["string", "null"] },
          "email": { "type": ["string", "null"], "format": "email" },
          "phone": { "type": ["string", "null"] },
          "company": { "type": ["string", "null"] },
          "external_id": { "type": ["string", "null"] },
          "notes": { "type": ["string", "null"] },
          "status": { "type": ["string", "null"], "enum": ["new", "open", "completed", null] },
          "created_at": { "type": ["string", "null"], "format": "date-time" },
          "updated_at": { "type": ["string", "null"], "format": "date-time" }
        }
      },
      "Company": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "name": { "type": "string" },
          "owner_id": { "type": ["integer", "null"], "format": "int64" },
          "billing_cycle_start_date": { "type": ["string", "null"], "format": "date-time" },
          "created_at": { "type": ["string", "null"], "format": "date-time" },
          "updated_at": { "type": ["string", "null"], "format": "date-time" }
        }
      },
      "InboundMessage": {
        "type": "object",
        "required": ["name", "phone"],
        "properties": {
          "name": { "type": "string", "maxLength": 255 },
          "email": { "type": ["string", "null"], "format": "email", "maxLength": 255 },
          "company": { "type": ["string", "null"], "maxLength": 255 },
          "phone": { "type": "string", "description": "E.164 format (e.g. +14155552671)" },
          "external_id": { "type": ["string", "null"], "maxLength": 255 }
        }
      },
      "UpdateLead": {
        "type": "object",
        "properties": {
          "id": { "type": ["integer", "null"], "format": "int64" },
          "phone": { "type": ["string", "null"], "description": "E.164 format (e.g. +14155552671)" },
          "bot_id": { "type": ["integer", "null"], "format": "int64" },
          "name": { "type": ["string", "null"], "maxLength": 255 },
          "email": { "type": ["string", "null"], "format": "email", "maxLength": 255 },
          "company": { "type": ["string", "null"], "maxLength": 255 },
          "external_id": { "type": ["string", "null"], "maxLength": 255 },
          "notes": { "type": ["string", "null"] },
          "status": { "type": ["string", "null"], "enum": ["new", "open", "completed", null] }
        }
      },
      "AvailabilitySlot": {
        "type": "object",
        "properties": {
          "start_time_utc": { "type": "string", "format": "date-time" },
          "start_time_local": { "type": "string", "format": "date-time" },
          "timezone": { "type": "string" },
          "invitees_remaining": { "type": "integer", "format": "int32" },
          "status": { "type": "string" },
          "scheduling_url": { "type": "string", "format": "uri" }
        }
      },
      "PaginationMeta": {
        "type": "object",
        "properties": {
          "current_page": { "type": "integer" },
          "from": { "type": ["integer", "null"] },
          "last_page": { "type": "integer" },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "url": { "type": ["string", "null"], "format": "uri" },
                "label": { "type": "string" },
                "active": { "type": "boolean" }
              }
            }
          },
          "path": { "type": "string" },
          "per_page": { "type": "integer" },
          "to": { "type": ["integer", "null"] },
          "total": { "type": "integer" }
        }
      },
      "PaginationLinks": {
        "type": "object",
        "properties": {
          "first": { "type": ["string", "null"], "format": "uri" },
          "last": { "type": ["string", "null"], "format": "uri" },
          "prev": { "type": ["string", "null"], "format": "uri" },
          "next": { "type": ["string", "null"], "format": "uri" }
        }
      },
      "PaginatedBots": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Bot" }
          },
          "links": { "$ref": "#/components/schemas/PaginationLinks" },
          "meta": { "$ref": "#/components/schemas/PaginationMeta" }
        }
      },
      "MessageAccepted": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "message": { "type": "string" },
          "data": {
            "type": "object",
            "properties": {
              "lead_id": { "type": "integer", "format": "int64" },
              "bot_id": { "type": "integer", "format": "int64" },
              "status": { "type": "string" },
              "channel": { "type": "string" }
            }
          }
        }
      },
      "PartialSuccess": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "message": { "type": "string" },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      },
      "LimitReached": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "message": { "type": "string" },
          "limit_reached": { "type": "boolean" },
          "leads_contacted": { "type": "integer" },
          "leads_allowed": { "type": "integer" }
        }
      },
      "Error": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": { "type": "string" }
        }
      },
      "ValidationProblem": {
        "type": "object",
        "required": ["message", "errors"],
        "properties": {
          "message": { "type": "string" },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer" }
    },
    "responses": {
      "Unauthorized": {
        "description": "Unauthenticated",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
      },
      "Forbidden": {
        "description": "Forbidden",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
      },
      "NotFound": {
        "description": "Not found",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
      },
      "ValidationError": {
        "description": "Validation failed",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ValidationProblem" } } }
      }
    }
  }
}
